{
  "version": 2,
  "name": "copa-tomatao",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "installCommand": "npm install",
  "buildCommand": "npm run vercel:build",
  "outputDirectory": "dist/public"
}
